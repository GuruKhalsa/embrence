<div>
	<h3>Notes (<%= @hero.posts.count%>)</h3>
	<ol class="posts">
		<% @posts.each do |post| %>
		<li class="post-item">
			<span class="post-content"><%= simple_format(post.post) %>

			<% if hero_admin? || signed_in? && post.user_id == current_user.id %>
						
				<%=link_to "x",post_path(post.id, :msg_hero => @hero.id, :destroy_page => "hero"), :method => :delete, :class => "post-top-right", :confirm => "Are you sure you want to delete this message?"%>
			<% end %>
			</span>
			<span class="timestamp">
				<%= time_ago_in_words(post.created_at)%> ago </span>
				<span class="post-name"><%= post.name if post.name %></span>
				<span class="post-user"><%= link_to User.find(post.user_id).name, user_path(post.user_id) if post.user_id %></span>
			
			<span><%# @user.name %></span>
		</li>
		<% end %>
	</ol>
	<%= will_paginate @posts, :page_links => false %>
</div>


	<div id="share_form">

		<%= form_for(@post) do |f| %>
			<% if signed_in? == false %>
				<%= f.text_field :name, placeholder: "Your Name" %>
			<% end %>
			<%= f.text_area :post, placeholder: "Share about #{@hero.name}" %>
			<%= f.hidden_field :hero_id, :value => @hero.id %>

			<%= f.submit "Submit", class: "btn btn-xs btn-primary pull-right" %>
		<% end %>
	</div>
