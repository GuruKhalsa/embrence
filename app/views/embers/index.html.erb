<% provide(:title, 'All heroes') %>
<h1>Embers<span class="new-hero"><%= link_to "New Ember", new_ember_path, class: "btn btn-large btn-primary hero-button" %>
</span></h1>

<div class="center">
<% if @heroes.count > 0 %>

	<%= will_paginate @heroes %>


		<% @heroes.shuffle.each do |hero| %>
		
		<span class="wrapper">
			<span class="heroes-listings">
				<%= link_to image_tag(hero.image.url(:list).to_s, :class => "hero-listing" ), ember_path(hero) %>
			</span>
			<span class="heroes-hover" >
				<%= hero.name %>
			</span>
		</span>
		<% end %>
</div>
	

	
	<%= will_paginate @heroes %>

<% else %>

	<h3 class="center">no heroes with that name found, please search again.</h3>
<% end %>
