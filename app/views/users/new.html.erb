<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>

			<%= f.text_field :first_name, placeholder: "First Name" %>
			<%= f.text_field :last_name, placeholder: "Last Name" %><br>

			<%= f.text_field :email, placeholder: 'Email' %>

			<%= f.password_field :password, placeholder: 'Password' %>

			<%= f.password_field :password_confirmation, placeholder: 'Password Confirmation' %>

			<%= f.label :image, "Profile Image (Optional)" %>
			<%= f.file_field :image, :onchange =>"validateFiles(this);", :data => { :max_file_size => 5.megabytes } %>

			<%= f.submit "create my account", class: "btn btn-large btn-primary" %>
		<% end %>

		<p>Already have an account? <%= link_to "Sign in", signin_path %></p>
	</div>
</div>
