<li>
	<span class="post-content"><%= post.post %>

	<% if signed_in? && post.user_id == current_user.id %>
				
		<%=link_to "x",post_path(post.id, :msg_hero => @hero.id), :method => :delete, :class => "post-top-right", :confirm => "Are you sure you want to delete this message?"%>
	<% end %>
	</span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(post.created_at)%> ago.
	</span>
	<span><%# @user.name %></span>
</li>